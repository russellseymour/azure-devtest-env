{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "devVNETResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "The devVNET resource group."
      }
    },
    "devVNETVirtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The devVNET network name."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS Name for the Storage Account where the Virtual Machine's disks will be placed."
      }
    },
    "storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ]
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "domadm"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "prefix" :{
      "type":"string",
      "defaultValue" : "[resourceGroup().name]",
      "metadata" : {
        "description" : "A prefix used for all resources in this resource group except the computer name"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2",
      "metadata": {
        "description": "Type of VM. Something that supports atleast 2 nics is required."
      }
    },
    "dnsVMNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "The dc VM computer name. 14 characters are available to use."
      }
    },
    "numberofdnsVms": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "the number of dc vms"
      }
   },
   "dnsServer01": {
     "type": "string",
     "metadata": {
       "description": "The ip address of the dns server for the .local prefix"
     }
   },
   "dnsServer02": {
     "type": "string",
     "metadata": {
       "description": "The ip address of the dns server for the .local prefix"
     }
   }
  },
  "variables": {
    "commonSettings": {
      "location": "[resourceGroup().location]",
      "prefix": "[parameters('prefix')]",
      "vnetID": "[resourceId(parameters('devVNETResourceGroup'), 'Microsoft.Network/virtualNetworks',parameters('devVNETVirtualNetworkName'))]"
    },

    "storageSettings": {
      "storageAccountName": "[parameters('storageAccountName')]",
      "storageType": "[parameters('storageType')]"
    },
    "networkSettings": {
      "subnetRef": {
        "app": "[concat(variables('commonSettings').vnetID,'/subnets/DnsSubnet')]",
        "mgmt": "[concat(variables('commonSettings').vnetID,'/subnets/MgmtSubnet')]"
      },
      "dns": {
        "server1": "[parameters('dnsServer01')]",
        "server2": "[parameters('dnsServer02')]"
      }
    },
    "machineSettings": {
      "adminUserName": "[parameters('adminUserName')]",
      "os": {
        "imagePublisher": "MicrosoftWindowsServer",
        "imageOffer": "WindowsServer",
        "imageSku": "2012-R2-Datacenter",
        "version": "latest"
      }
    },
    "sharedTemplateUrl": "https://raw.githubusercontent.com/tcsatheesh/azure-devtest-env/master/03-az-dns-srv/sharedresources.json",
    "dnsvmTemplateUrl":"https://raw.githubusercontent.com/tcsatheesh/azure-devtest-env/master/03-az-dns-srv/dnsvm.json",
    "configurednsTemplateUrl":"https://raw.githubusercontent.com/tcsatheesh/azure-devtest-env/master/03-az-dns-srv/configuredns.json"
  },
  "resources": [
    {
      "name": "shared-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonSettings": {
            "value": "[variables('commonSettings')]"
          },
          "storageSettings": {
            "value": "[variables('storageSettings')]"
          }
        }
      }
    },
    {
      "name": "dnsvm-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared-resources')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('dnsvmTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmNamePrefix": {
            "value" : "[parameters('dnsVMNamePrefix')]"
          },
          "prefix": {
            "value" : "[concat(variables('commonSettings').prefix,'-dns')]"
          },
          "numberofVms": {
            "value" : "[parameters('numberofdnsVms')]"
          },
          "commonSettings": {
            "value": "[variables('commonSettings')]"
          },
          "storageSettings": {
            "value": "[variables('storageSettings')]"
          },
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          },
          "machineSettings": {
            "value": "[variables('machineSettings')]"
          },
          "adminPassword" : {
            "value": "[parameters('adminPassword')]"
          },
          "vmSize" : {
            "value" : "[parameters('vmSize')]"
          }
        }
      }
    },
    {
      "name": "configureprimarydns-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'dnsvm-resources')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('configurednsTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value" : "dnsServer-01"
          },
          "modulesUrl": {
            "value" : "https://raw.githubusercontent.com/tcsatheesh/azure-devtest-env/master/03-az-dns-srv/ConfigurePrimaryDnsZone.ps1.zip"
          },
          "configurationFunction": {
            "value" : "ConfigurePrimaryDnsZone.ps1\\ConfigurePrimaryZone"
          }
        }
      }
    },
    {
      "name": "configuresecondardns-resources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'configureprimarydns-resources')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('configurednsTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value" : "dnsServer-02"
          },
          "modulesUrl": {
            "value" : "https://raw.githubusercontent.com/tcsatheesh/azure-devtest-env/master/03-az-dns-srv/ConfigureSecondaryDnsZone.ps1.zip"
          },
          "configurationFunction": {
            "value" : "ConfigureSecondaryDnsZone.ps1\\ConfigureSecondaryZone"
          }
        }
      }
    }
  ]
}
