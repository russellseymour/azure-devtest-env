                        "value": "[variables('machineSettings')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "sizeOfDiskInGB": {
                        "value": "[parameters('sizeOfDiskInGB')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    }
                }
            }
        },
        {
            "name": "chefvm-resources",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
