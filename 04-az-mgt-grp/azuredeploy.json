                    },
                    "prefix": {
                        "value": "[concat(variables('commonSettings').prefix,'-mon')]"
                    },
                    "numberofVms": {
                        "value": "[parameters('numberofmonVms')]"
                    },
                    "commonSettings": {
                        "value": "[variables('commonSettings')]"
                    },
                    "storageSettings": {
                        "value": "[variables('storageSettings')]"
                    },
                    "networkSettings": {
